# Account configuration example
# Copy this file to create a new account: cp example.env myaccount.env

# Binance API credentials (required)
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Strategy to use (required)
# Format: SYMBOL_shortid (e.g., BTCUSDT_abc123)
STRATEGY=BTCUSDT_abc123

# Trading interval (required)
# Options: 1m, 5m, 15m, 30m, 1h, 4h, 1d
INTERVAL=1h

# Leverage for futures trading (optional, default: 1)
LEVERAGE=5

# Portion of margin to use per trade (optional, default: 0.2)
INVESTMENT_RATIO=0.2

# Telegram notifications (optional)
# Get your chat ID from @userinfobot on Telegram
TELEGRAM_DM_ID=
